<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_con_item"
        android:background="#e8e2e3">
        <RelativeLayout
            android:id="@+id/activity_get_cons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/conId"
                android:id="@+id/txt_conid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:textSize="22sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/description"
                android:id="@+id/txt_con_desc"
                android:layout_below="@+id/txt_conid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/value"
                android:id="@+id/txt_value"
                android:layout_below="@+id/txt_con_desc"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
